<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Верхнее меню -->
    <FrameLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#4CAF50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FilmsSearch"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp" />
    </FrameLayout>

    <!-- Горизонтальный список постеров -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scrollbars="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/poster_1"
                android:contentDescription="Постер 1"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/poster_2"
                android:contentDescription="Постер 2"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/poster_3"
                android:contentDescription="Постер 3"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Текст под постерами -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Постеры предоставлены: https://www.movieposters.com/"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_menu"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Guideline: начало карточки (30% экрана) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <!-- Guideline: конец карточки (70% экрана) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <!-- Центральная градиентная карточка -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_top_card"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_menu"
            android:gravity="center"
            android:paddingVertical="16dp">

            <!-- Кнопки меню -->
            <Button
                android:id="@+id/btn_menu"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="МЕНЮ"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn_favorites"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ИЗБРАННОЕ"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn_later"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ПОСМОТРЕТЬ ПОЗЖЕ"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn_collections"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ПОДБОРКИ"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="8dp" />

            <Button
                android:id="@+id/btn_settings"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="НАСТРОЙКИ"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Нижняя панель -->
    <FrameLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>